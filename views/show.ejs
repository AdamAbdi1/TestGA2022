<body>
    <h1 style="text-align: center;">Employees</h1>
    <input type="button" class="button-primary" onclick="parent.location='/employee/new'" value="add employee" />
    <table class="u-full-width">
        <tr>
            <th >Avatar</th>
            <th>First</th>
            <th>Last</th>
            <th>Email</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <% for(let i = 0; i < employee.length; i++){ %>
            <tr>
                <th></th>
                <td><a href="/employee/<%=employee[i].id%>"><%=employee[i].first%></a></td>
                <td><%=employee[i].last%></td>
                <td><%=employee[i].email%></td>
                <td><input type="button" onclick="parent.location='/employee/<%=employee[i].id%>/edit'" value="edit" /></td>
                <form action="/employee/<%=employee[i].id%>?_method=DELETE" method="POST">
                <td><input type="submit" value="delete"/></td>
                </form>
            </tr>
        <% } %>
    </table>
    <button onclick="history.back()">back</button>
</body>
</html>